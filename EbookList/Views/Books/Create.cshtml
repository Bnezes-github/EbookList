@model EbookList.Models.Book
@{
    ViewData["Title"] = "Create";
}
<br/>

<h3>Create</h3>
<hr />

<form asp-action="Create">
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" class="form-control" />
                </div>
            </div>
            
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-outline-primary"/>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">Back to List</a>
        </div>
    </div>

</form>